{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "git pull",
            "type": "shell",
            "command": "git pull",
            "problemMatcher": [],
            // "runOptions": {
            //     "runOn": "folderOpen"
            // }
        },
        {
            "label": "build client",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "build server",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "build common",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/common"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "build all",
            "command": "make",
            "problemMatcher": []
        },
        {
            "label": "run server",
            "type": "shell",
            "command": "./build/bin/server",
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "problemMatcher": []
        },
        {
            "label": "run client",
            "type": "shell",
            "command": "./build/bin/client",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "isBackground": true,
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            },
            "runOptions": {
                "instanceLimit": 99999,
                "reevaluateOnRerun": false
            }
        },
        {
            "label": "run all",
            "dependsOn": [
                "run server",
                "run client"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "clean all",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "clean all and build all",
            "dependsOn": [
                "clean all",
                "build all"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "delete database",
            "type": "shell",
            "command": "rm -rf *.db",
            "options": {
                "cwd": "${workspaceFolder}/database"
            },
            "problemMatcher": []
        }
    ]
}
